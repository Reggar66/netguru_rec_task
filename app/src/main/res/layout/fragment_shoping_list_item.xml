<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/fragment_shoppingListItem_imageView_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_shopping_cart_24" />

    <LinearLayout
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fragment_shoppingListItem_imageView_icon"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/fragment_shoppingListItem_textView_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="List Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fragment_shoppingListItem_textView_counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Groceries done 5/25" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>