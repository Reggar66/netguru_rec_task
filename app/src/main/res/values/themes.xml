<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Netguru_rec_task" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor_day</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor_day</item>
        <item name="colorOnPrimary">@color/primaryTextColor_day</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor_day</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor_day</item>
        <item name="colorOnSecondary">@color/secondaryTextColor_day</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!--FAB icons-->
        <item name="iconTint">@color/white</item>

        <!--ToolBar-->
        <item name="actionBarTheme">@style/Net.ToolBar</item>
        <item name="titleTextColor">@color/white</item>
        <item name="toolbarBackgroundColor">?attr/colorPrimary</item>

        <!-- Tab -->
        <item name="tabSelectedColor">@color/white</item>
        <item name="tabUnselectedColor">@color/tabUnselected_light_day</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabBackground">?attr/colorPrimary</item>
    </style>
</resources>